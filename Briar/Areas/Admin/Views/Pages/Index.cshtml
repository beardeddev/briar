@model Shamrock.Data.PagedCollection<Briar.Models.Page>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@Html.Grid(Model.Collection).Columns(column => {
    column.For(item => item.Id);
    column.For(item => item.Title);
    column.For(item => item.Url);
    column.For(item => Html.StateImage(item.State)).Named(Display.State);
    column.For(item => item.CreatedOn);
    column.For(item => item.UpdatedOn);
    column.For(item => Html.GridActionLinks(item)).Encode(false);
})

<br />
@Html.ActionLinkToCreate()