<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>@ViewBag.PageTitle</title>
    <meta name="keywords" content="@ViewBag.Keywords" />
    <meta name="description" content="@ViewBag.Description" />
        
    <script type="text/javascript" src="@Url.Content("~/Scripts/modernizr-1.7.min.js")"></script>
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.6.4.min.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui-timepicker-addon.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/dashboard.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.gritter.min.js")"></script>
    
    <link href="@Url.Content("~/Content/styles.css")" rel="stylesheet" type="text/css" />
    <link type="text/css" rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/themes/eggplant/jquery-ui.css" />        
    @RenderSection("head", required: false)

    @Html.GritterFlashMessages();
</head>
<body>
    <header>
        <hgroup>
            <h1>
                <a href="/">@Request.Url.Host</a></h1>
            <h2>@Display.WebSiteSlogan</h2>
        </hgroup>
    </header>
    <nav>
        @Html.Menu("MainMenu")
    </nav>
    <div class="transition">
        <div id="container">
            <div class="content-box">
                <h2>@ViewBag.Title</h2>
                <div class="inner">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div>
            <p>
                &copy; beardeddev.pp.ua 2011. Website Design by <a href="http://beardeddev.pp.ua">Beardeddev</a>
                | @Display.RequestElapsedTime: @ViewBag.RequestElapsedTime</p>
        </div>
    </footer>
    @RenderSection("footer", false)
</body>
</html>
