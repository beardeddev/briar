<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Beardeddev - home page</title>
    <title>@ViewBag.Title</title>
    <meta name="keywords" content="@ViewBag.Keywords" />
    <meta name="description" content="@ViewBag.Description" />
    <link href="@Url.Content("~/Content/styles.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/modernizr-1.7.min.js")"></script>
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.6.4.min.js"></script>
    <link rel="alternate" type="application/rss+xml" title="Beardeddev RSS" href="@AppSettings.RSSLink" />
    @RenderSection("head", required:false)
</head>
<body>
    <header>
        <hgroup>
            <h1>
                <a href="/">@Request.Url.Host</a></h1>
            <h2>@Display.WebSiteSlogan</h2>
        </hgroup>
    </header>
    <nav>
        @Html.Menu("MainMenu")
    </nav>
    <div class="transition">
        <div id="container">
            <div id="wrapper">
                <section id="content">
                    @RenderBody()
                </section>
                <aside>
                    @{
                        Html.RenderPartial("_CategoriesCloud", ViewBag.CategoriesCloud as IEnumerable<Briar.ViewModels.Cloud>);
                        Html.RenderPartial("_Archive", ViewBag.Archive as Briar.ViewModels.ArchiveCollection);
                    }
                    @RenderSection("sidebar", false)
                </aside>
            </div>
        </div>
    </div>
    <footer>
        <div>
            <p>
                &copy; beardeddev.pp.ua 2009 - @DateTime.Now.Year. Website Design by <a href="http://beardeddev.pp.ua">Beardeddev</a>
                | @Display.RequestElapsedTime: @ViewBag.RequestElapsedTime</p>
        </div>
    </footer>
    @RenderSection("footer", false)
</body>
</html>
